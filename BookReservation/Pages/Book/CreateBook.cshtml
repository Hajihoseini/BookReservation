@page
@model BookReservation.Pages.Book.CreateBookModel
@{
}


<form method="post">
    <div class="row col-6 form-group">
        <label for="name">Book name</label>
        <input class="form-control" name="name" value="" type="text" />
    </div>

    <div class="row col-6 form-group">
        <label for="name">Author</label>
        <input class="form-control" name="Author" value="" type="text" />
    </div>

    <div class="row col-6 form-group">
        <label for="Price">Price</label>
        <input class="form-control" name="BookPrice" min="0" type="number" id="Price" />
    </div>

    <div class="row col-6 form-group">
        <label for="CategoryId">Author</label>
        <select class="form-control" asp-items="@Model.BookCategories" name="CategoryId" value="" id="CategoryId">
            <option value="0">Please select a book category ...</option>
        </select>
    </div>

    <div class="col-md-4">
        <button class="btn btn-success" type="submit">Submit !</button>
    </div>
</form>